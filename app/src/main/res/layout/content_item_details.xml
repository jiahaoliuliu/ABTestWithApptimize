<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jiahaoliuliu.abtestwithapptimize.ItemDetailsActivity"
    tools:showIn="@layout/activity_item_details"
    >

  <ImageView
      android:id="@+id/item_image_view"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:scaleType="center"
      android:src="@drawable/xiaomi5"
      android:layout_alignParentTop="true"
      />

  <LinearLayout
      android:layout_below="@+id/item_image_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/items_vertical_margin"
      android:paddingLeft="@dimen/items_horizontal_margin"
      android:paddingRight="@dimen/items_horizontal_margin"
      android:paddingTop="@dimen/items_vertical_margin"
      android:orientation="vertical"
      >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/textAppearanceLarge"
          android:text="@string/item_title"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/item_description"
          android:ellipsize="end"
          android:lines="8"
          />
  </LinearLayout>

  <!-- Bottom buttons -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:orientation="horizontal"
      android:background="@color/colorPrimary"
      android:layout_alignParentBottom="true"
      >
    <ImageView
        android:id="@+id/call_button_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/button_call"
        android:background="@android:color/transparent"
        />
    <ImageView
        android:id="@+id/email_button_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/button_email"
        android:background="@android:color/transparent"
        />
    <ImageView
        android:id="@+id/sms_button_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/button_sms"
        android:background="@android:color/transparent"
        />
  </LinearLayout>
</RelativeLayout>
